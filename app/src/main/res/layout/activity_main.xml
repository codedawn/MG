<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_app"
        android:src="@drawable/background"
        android:layout_width="5000dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/iv_user"
        android:src="@drawable/user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_app"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_app"
        android:layout_toRightOf="@+id/iv_user"
        android:layout_marginTop="30dp"
        android:hint="请输入账号"
        android:inputType="text" />
    <ImageView
        android:id="@+id/iv_password"
        android:src="@drawable/password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_user"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_user"
        android:layout_toRightOf="@+id/iv_user"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="请输入密码" />

    <CheckBox
        android:id="@+id/cb_psd"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_password"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="记住密码"
        />
    <Button
        android:id="@+id/bt_register"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_below="@+id/cb_psd"
        android:layout_marginLeft="100dp"
        android:background="@drawable/button_register_style"
        android:textSize="20dp"
        android:text="注册"
        android:textColor="#ff9999"
        />
    <Button
        android:id="@+id/bt_login"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_below="@+id/cb_psd"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/bt_register"

        android:textSize="20dp"
        android:background="@drawable/button_login_style"
        android:text="登录"
        android:textColor="#FFFF"
        />


</RelativeLayout>
