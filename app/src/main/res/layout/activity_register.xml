<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterActivity">

    <ImageView
        android:id="@+id/iv_app"
        android:src="@drawable/background"
        android:layout_width="5000dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_app"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="请输入用户名:"
        android:textSize="20dp"
        android:textColor="#ff9999"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/et_registerUser"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_app"
        android:layout_marginTop="10dp"
        android:hint="用户名应在5-15字符"
        android:layout_toRightOf="@+id/tv_user"
        />
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_user"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="请输入密  码:"
        android:textColor="#ff9999"
        android:textSize="20dp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/et_registerPSD"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_user"
        android:layout_toRightOf="@+id/tv_password"
        android:layout_marginTop="20dp"
        android:hint="密码在6-18位字符"
         />
    <Button
        android:id="@+id/bt_register"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_password"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_register_style"
        android:textSize="20dp"
        android:text="注册"
        android:textColor="#ff9999"
        />
    <ImageButton
        android:id="@+id/ib_return"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_below="@+id/bt_register"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:background="#00000000"
        />

</RelativeLayout>
